<%- model_class = Site -%>
<div class="page-header">
  <div class="pull-right">
    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_site_path,
              :class => 'btn btn-primary' %>
  </div>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>

        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:capacity_cubic_qunatity) %></th>
        <th><%= model_class.human_attribute_name(:first_kilometer_charge) %></th>
        <th><%= model_class.human_attribute_name(:more_than_1_km_charge) %></th>
        <th><%= model_class.human_attribute_name(:excavation_charges) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th> 
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td><%= link_to site.name.titleize, site_path(site) %></td>
          <td><%= site.default_truck_capacity %></td>
          <td><%= site.lnt_basic_charge %></td>
          <td><%= site.lnt_leading_charge %></td>
          <td><%= site.excavation_charges %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),edit_site_path(site), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        site_path(site),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
            <%= link_to "Check Trip Records", site_trip_records_path(site_id: site), :class => 'btn btn-default btn-xs' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


