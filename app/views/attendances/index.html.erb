<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <h3>Date :- <%= Date.current %></h3>
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:employee_name) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th> 
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.name.titleize, employee_path(employee) %></td>
          <td>
            <% if check_employee_attendance_for_today(employee).present? %>
              <%= link_to "Absent", mark_attendance_employee_path(employee), :class => 'btn btn-danger btn-xs', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))} %>
            <% else %>
              <%= link_to "Present", mark_attendance_employee_path(employee), :class => 'btn btn-success btn-xs' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>