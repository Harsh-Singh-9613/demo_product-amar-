<%= form_for @employee, :html => { :class => "form-horizontal professor" } do |f| %>

  <%#= render "shared/error",object: @professor%>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :license_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :license_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:license_number) %>
  </div>
  
  <div class="form-group">
    <%= f.label :adhaar_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :adhaar_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:adhaar_number) %>
  </div>  

  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :mobile_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mobile_number) %>
  </div> 

  <div class="form-group">
    <%= f.label :salary, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :salary, :class => 'form-control' %>
    </div>
    <%=f.error_span(:salary) %>
  </div>

  <div class="form-group">
    <%= f.label :designation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :designation, ['manger', 'driver', 'conductor'], { prompt: 'Select Designation' }, class: 'form-control' %>
    </div>
    <%=f.error_span(:designation) %>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
