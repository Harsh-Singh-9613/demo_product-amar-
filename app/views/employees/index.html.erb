<%- model_class = Employee -%>
<div class="page-header">
  <div class="pull-right">
    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_employee_path,
              :class => 'btn btn-primary' %>
  </div>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>

        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:license_number) %></th>
        <th><%= model_class.human_attribute_name(:adhaar_number) %></th>
        <th><%= model_class.human_attribute_name(:mobile_number) %></th>
        <th><%= model_class.human_attribute_name(:salary) %></th>
        <th><%= model_class.human_attribute_name(:designation) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th> 
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.name.titleize, employee_path(employee) %></td>
          <td><%= employee.license_number %></td>
          <td><%= employee.adhaar_number %></td>
          <td><%= employee.mobile_number %></td>
          <td><%= employee.salary %></td>
          <td><%= employee.designation %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),edit_employee_path(employee), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        employee_path(employee),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>